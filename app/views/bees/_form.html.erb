<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @bee do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :queen %>
  <%= f.check_box :queen %>
  <%= f.collection_select :hive_id, @hives, :id, :name%>
  <%= f.submit %>
<% end %>
